{
  "extends": ["stylelint-config-recommended-scss"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "selector-max-id": 0,
    "selector-max-type": [
      1,
      {
        "ignore": ["child", "descendant", "compounded"]
      }
    ],
    "scss/selector-no-redundant-nesting-selector": true
  }
}
